package st;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class TriangleTestJ4 {

	private Triangle t_Scalene; //
	private Triangle t_Equilateral; //
	private Triangle t_Isoscelese;
	private Triangle t_notATriangle;
	
	
	@Before
	public void setUp() throws Exception {
		t_Scalene = new Triangle(3, 4, 5);
		t_Equilateral = new Triangle(1,1,1);
		t_Isoscelese = new Triangle(8, 5, 5);
		t_notATriangle = new Triangle(100,100,1);
	}

	@Test
	public void scaleneOk() {
		assertTrue(t_Scalene.isScalene());
		assertTrue(t_Equilateral.isScalene());
		assertTrue(t_Isoscelese.isScalene());
		assertTrue(t_notATriangle.isScalene());
		
	}

}